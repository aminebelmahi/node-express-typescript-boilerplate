{
     "compilerOptions": {
          "target": "es5",
          "module": "commonjs",
          "moduleResolution": "node",
          "outDir": "dist",
          "allowJs": false,
          "skipLibCheck": false,
          "esModuleInterop": true,
          "allowSyntheticDefaultImports": true,
          "strict": true,
          "forceConsistentCasingInFileNames": true,
          "resolveJsonModule": true,
          "isolatedModules": false,
          "noEmit": true,
          "baseUrl": ".",
          "rootDir": "."
     },
     "include": ["./src"],
     "exclude": ["node_modules"]
}
